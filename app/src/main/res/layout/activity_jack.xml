<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xx"
    tools:context=".jackson.JackActivity">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/text_top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#F11717"
            android:textSize="20sp" />

    </RelativeLayout>
    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E77474"
        android:layout_above="@id/ly_tab_bar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/div_top_bar"
        android:layout_above="@id/div_tab_bar"
        android:id="@+id/ly_content">
    </FrameLayout>
    <View
        android:id="@+id/div_top_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#DB4E4E"
        android:layout_below="@id/ly_top_bar"/>

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="xxxx."
            android:textColor="#F5C7C7"
            android:textSize="16sp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp" />
        <TextView
            android:id="@+id/text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="千玺"
            android:textColor="#F1B1B1"
            android:textSize="16sp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp" />
        <TextView
            android:id="@+id/text_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="少年的你"
            android:textColor="#F1D4D4"
            android:textSize="16sp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:padding="5dp" />
    </LinearLayout>

</RelativeLayout>